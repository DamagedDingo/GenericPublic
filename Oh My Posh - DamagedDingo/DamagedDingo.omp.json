{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#7d12ff",  // Light purple
          "foreground": "#FFFFFF",  // White text for contrast
          "leading_diamond": "\ue0b6",
          "style": "diamond",
          "template": " {{ .Icon }} ",
          "trailing_diamond": "\ue0b0",
          "type": "os"
        },
        {
          "background": "#ab20fd",  // Darker purple
          "foreground": "#FFFFFF",  // White text for contrast
          "leading_diamond": "<transparent,#ab20fd>\ue0b0</>",
          "style": "diamond",
          "template": " \uf0e7 ",  // Lightning bolt icon for admin/root
          "trailing_diamond": "\ue0b0",
          "type": "root"
        },
        {
          "background": "#7d12ff",  // Light purple
          "foreground": "#ab20fd",  // Dark purple text for contrast
          "leading_diamond": "<transparent,#7d12ff>\ue0b0</>",
          "properties": {
            "folder_icon": "...",
            "folder_separator_icon": "<transparent> \ue0b1 </>",
            "home_icon": "\ueb06",
            "style": "agnoster_short"
          },
          "style": "diamond",
          "template": " {{ .Path }} ",
          "trailing_diamond": "\ue0b0",
          "type": "path"
        },
        {
          "background": "#4b0082",  // Indigo purple for contrast with other purples
          "foreground": "#FFFFFF",  // White text for good visibility
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "background": "#ab20fd",  // Dark purple for execution time
          "foreground": "#FFFFFF",  // White text for contrast
          "leading_diamond": "<transparent,#ab20fd>\ue0b0</>",
          "properties": {
            "style": "dallas",
            "threshold": 0
          },
          "style": "diamond",
          "template": " ‚è±  {{ .FormattedMs }}s ",
          "trailing_diamond": "\ue0b0",
          "type": "executiontime"
        },
        {
          "background": "#7d12ff",  // Light purple for music segment
          "foreground": "#FFFFFF",  // White text for contrast
          "leading_diamond": "<transparent,#7d12ff>\ue0b0</>",
          "properties": {
            "music_player": "ytm",
            "no_playing_message": "",
            "playing_template": "üéµ {{ .Artist }} - {{ .Title }}",
            "paused_template": "‚è∏Ô∏è {{ .Artist }} - {{ .Title }}"
          },
          "style": "diamond",
          "template": " üéµ {{ .Artist }} - {{ .Title }} ",
          "trailing_diamond": "\ue0b0",
          "type": "music"
        },
        {
          "background": "#910000",  // Dark red for error/status, to differentiate
          "foreground": "#ffffff",  // White text for visibility
          "leading_diamond": "<transparent,background>\ue0b0</>",
          "style": "diamond",
          "template": "<transparent> \uf12a</> {{ reason .Code }} ",
          "trailing_diamond": "\ue0b0",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{if .Root}} \u26a1 {{end}}{{.Folder | replace \"~\" \"üè†\"}} @ {{.HostName}}",
  "final_space": true,
  "version": 2,
  "transient_prompt": {
    "background": "#7d12ff",
    "foreground": "#FFFFFF",
    "template": " {{ .Path }} "
  }
}
